# TaskFlow Pro Backend - Environment Variables
# Copy this file to .env and fill in your values

# Database connection string (PostgreSQL)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://taskflow_user:taskflow_pass@localhost:5432/taskflow_db"

# JWT Configuration
# IMPORTANT: Use a strong, random secret (min 32 characters) in production
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-change-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV="development"

# CORS Configuration
# URL of your frontend application
FRONTEND_URL="http://localhost:3000"
